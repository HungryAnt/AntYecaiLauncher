        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" >
            <TextBlock Foreground="White" FontSize="24">建设中...</TextBlock>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Foreground="White" Margin="0, 0, 8, 0">活跃QQ群:</TextBlock>
                <TextBox IsReadOnly="True">20977325</TextBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
